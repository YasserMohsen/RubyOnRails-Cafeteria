<!DOCTYPE html>
<html>
<head>
  <title>RubyOnRailsCafeteria</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'admin', 'data-turbolinks-track': 'reload' %>
</head>

<body class="<%= controller.controller_name%>">

<div class="ui container">
  <header>
    <div id="logo">
      <a href="#">
        Cafeteria
      </a>
    </div>
    <div class="user">
      <div class="ui inline labeled icon top right pointing dropdown" tabindex="0">
        <%= image_tag "avatar-default.png", :class => "ui avatar image" %>
        admin
        <i class="dropdown icon"></i>
        <div class="menu" tabindex="-1">
          <a class="item" href=""><i class="sign out icon"></i>Logout</a>
        </div>
      </div>
    </div>
  </header>


  <div class="ui teal inverted menu fluid">
    <%= link_to admin_path, class: "item" do %>
        <i class="icon block layout"></i> Dashboard
    <% end %>

    <%= link_to admin_categories_path, class: "item" do %>
        <i class="browser icon"></i> Categories
    <% end %>

    <%= link_to admin_rooms_path, class: "item" do %>
        <i class="browser icon"></i> Rooms
    <% end %>

    <div class="right menu">
      <%= link_to root_path, class: "item" do %>
          <i class="home icon"></i>
      <% end %>
    </div>

  </div>

</div>
<% if notice %>
    <div class="ui container green inverted segment">
      <p><%= notice %>
    </div>
<% end %>

<% if alert %>
    <div class="ui container red inverted segment">
      <p><%= alert %></p>
    </div>
<% end %>

<% if controller.controller_name != "dashboard" %>
  <div class="ui container segment">
    <%= semantic_breadcrumbs %>
  </div>
<% end %>

<div class="ui container segment">
  <%= yield %>
</div>

<script>
    $(document).ready(function () {
        $('.ui.dropdown')
            .dropdown()
        ;
    });
</script>

</body>
</html>
