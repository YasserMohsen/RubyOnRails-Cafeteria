<%= form_for(model, :html => {:class => "ui small form error"}) do |f| %>

    <table class="ui very basic celled center aligned table">
      <thead>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>#</th>
      </tr>
      </thead>
      <tbody id="cart">
      <tr>
        <td colspan="4">Empty ...</td>
      </tr>
      </tbody>
    </table>

    <div class="field">
      <%= f.label :notes %>
      <%= f.text_area :notes, rows: 3 %>
    </div>

    <div class="field">
      <%= f.label :room %>
      <%= f.collection_select(:room_id, Room.all, :id, :name, include_blank: false) %>
    </div>

    <% if users_list %>
      <div class="field">
        <%= f.label :user %>
        <%= f.collection_select(:user_id, User.all, :id, :name, include_blank: false) %>
      </div>
    <% end %>

    <h2>EGP <span id="total">0.00</span></h2>

    <%= render 'layouts/error_messages', object: @order %>

    <%= f.submit :class => "ui small blue submit button" %>
<% end %>