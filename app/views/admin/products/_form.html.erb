<%= form_for([:admin, product], :html => {:class => "ui large form error", :multipart => true}) do |f| %>

    <%= render 'layouts/error_messages', object: product %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :category %>
      <%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: false) %>
    </div>

    <div class="field">
      <%= f.file_field :picture %>
    </div>

    <div class="inline field">
      <div class="ui toggle checkbox">
        <%= f.check_box :availability, { checked: true } %>
        <%= f.label(:availability, "Available?") %>
      </div>
    </div>

    <%= f.submit :class => "ui small blue submit button" %>
<% end %>
