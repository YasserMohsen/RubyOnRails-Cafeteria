<div class="ui fluid card" id="dashboard_order_<%= order.id %>">
  <div class="content">
    <table class="ui fluid celled red table">
      <thead>
      <tr>
        <th class="three wide ui header center aligned">
          Order Date
        </th>
        <th class="three wide ui header center aligned">
          Name
        </th>
        <th class="two wide ui header center aligned">
          Room
        </th>
        <th class="two wide ui header center aligned">
          Ext.
        </th>
        <th class="four wide ui header center aligned">
          Action
        </th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td class="ui header">
          <%= order.created_at %>
        </td>
        <td>
          <%= order.user.name %>
        </td>
        <td>
          <%= order.room.name %>
        </td>
        <td>
          <%= order.user.ext %>
        </td>
        <td>
          <button id="dashboard_order_button_<%= order.id %>"
                  class="ui
                    <% if order.status == 'received' %> red <% elsif order.status == 'processing' %> green <% end %>
                    large button fluid dashboard_order_button"
                  data-id="<%= order.id %>"
                  data-status="<%= order.status %>">
            <% if order.status == 'received' %> Start <% elsif order.status == 'processing' %> Finish <% end %>
          </button>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="content">
    <div class="ui five column grid stackable doubling">
      <%= render partial: "product", collection: order.products, locals: {:order => order} %>
    </div>
  </div>
  <div class="extra content">
    <span class="ui header right floated">
      Total Cost: <%= order.get_total %>
    </span>
    <% if order.notes != "" %>
      <div class="ui header red">Notes:</div>
      <div class="header"><%= order.notes %></div>
    <% end %>
  </div>
</div>