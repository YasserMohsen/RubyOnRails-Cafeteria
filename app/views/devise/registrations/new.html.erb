<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Create an account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui large form error"}) do |f| %>
        <div class="ui stacked ">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off" %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>

          <%= f.submit "Sign up", :class => "ui fluid large teal submit button" %>
        </div>
        <%= render 'layouts/error_messages', object: f.object %>
    <% end %>

    <div class="ui message">
      New to us? <a href="#">Sign In</a>
    </div>
  </div>
</div>
